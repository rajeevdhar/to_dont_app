<% include ../partials/header %>

<div class="container">
  <div class="jumbotron text-center">
    <h1 style="color:yellow">Hello, <%= user.username %>!</h1>
    <p><h2 style="color:white">Enjoy a world of limited possibilities.</h2></p>
    <hr>
    <a href="post/<%= user.id %>/new" class="btn btn-success"><span class=""></span> Create To Don't</a>
    <a href="/user/edit" class="btn btn-info"><span class="fa fa-user"></span> Edit Account</a>
    <a href="/logout" class="btn btn-primary"><span class="fa fa-user"></span> Logout</a>
    <br>
    <hr>
    
    <% allPosts.forEach(function(post,index){ %>
    <span style="display: inline-block; vertical-align: top; border: 1px solid black; width: 300px; height: auto; margin: 10px; padding: 10px">
      <small><%= index +1%>. <b>I don't want to . . . </b></small>
       <h2><%= post.title %>
      </h2>
      <p>
      <%= post.body %>
      </p>
      <p>
      <%= (new Date().getTime() - new Date(post.createdAt).getTime()) / (60*60*24)%> days
      </p>
      <a href="/post/<%= post.id %>/edit" class="btn btn-info btn-sm">Edit</a>
      <form action="/post/<%= post.id %>?_method=delete" method="post" style="display:inline-block;">
        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
      </form>
  </span>

<% }); %>

 </div> 

</div>

  <% include ../partials/footer %>